<div id="exit_team_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("team_users/0", :method => :delete, class: "col s12 exit_team_form") do %>
        <div class="row">
          <div class="col s12">
            <h4>Exit Team</h4>
            <p>Are you sure you want to exit the team?</p>
          </div>
          <div class="input-field col s12">
            <input type="hidden" name="team_exit_id" id="team_exit_id">
            <input type="hidden" name="user_exit_id" id="user_exit_id">
            <%= submit_tag("Exit", class: "btn red right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>