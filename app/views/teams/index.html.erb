<div class="center row no_team">
  <% if current_user.my_teams.present? %> 
    <h5>Your Teams</h5>
    <div class="row">
      <ul class="collection col m4 offset-m4 s10 offset-s1">
        <% current_user.my_teams.each do |t| %>
          <li class="collection-item dismissable">
            <div>
              <%= t.slug %>
              <a href="/<%= t.slug %>" class="secondary-content">
                <i class="material-icons">call_made</i>
              </a>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="row">
      <a class="btn" href="#add_team_modal">New Team</a>
    </div>
  <% else %>
    <p>You have not created any teams yet</p>
    <p>Create one now and empower your team!</p>
    <a class="btn" href="#add_team_modal">New Team</a>
  <% end %>
</div>

<div class="center row invitations">
  <% if current_user.invitations.present? %>
    <h5>Your Invitations</h5>
    <ul class="col m4 offset-m4 s10 offset-s1">
      <%= render current_user.invitations %>
    </ul>
  <% else %>
    <h5>You do not have invitations</h5>
  <% end %>
</div>